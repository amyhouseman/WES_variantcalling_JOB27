#!/bin/bash --login
#SBATCH -J AmyHouseman_fastp
#SBATCH -o %x.stdout.%J.%N
#SBATCH -e %x.stderr.%J.%N
#SBATCH --ntasks=1
#SBATCH --ntasks-per-node=1
#SBATCH -p compute
#SBATCH --account=scw1581
#SBATCH --mail-type=ALL          # Mail events (NONE, BEGIN, END, FAIL, ALL)
#SBATCH --mail-user=HousemanA@cardiff.ac.uk     # Where to send mail
#SBATCH --array=1-23
#SBATCH --time=06:00:00
#SBATCH --mem-per-cpu=128GB

module purge
module load singularity
module load parallel

# Set bash error trapping to exit on first error.
set -eu

WDPATH=/scratch/$USER/$SLURM_ARRAY_JOB_ID
CONTAINER_FILE=fastp-v0.23.1.sif
MY_CONTAINER_PATH=/scratch/$USER/containers
CONTAINER=$MY_CONTAINER_PATH/$CONTAINER_FILE
EXOME_IDs_FILE=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/fastp/All_fastp_input/all_fastp_input/IDswithoutR1R2_JOB27
FORWARD_FASTQ=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/fastp/All_fastp_input/RawPEreads/{}1.fastq.gz
REVERSE_FASTQ=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/fastp/All_fastp_input/RawPEreads/{}2.fastq.g
TRIMMED_FORWARD_OUTPUT=Polyposis_Exome_Analysis/fastp/All_fastp_output/TrimmedPEreads/{}1.trimmed.fq.gz
TRIMMED_REVERSE_OUTPUT=Polyposis_Exome_Analysis/fastp/All_fastp_output/TrimmedPEreads/{}2.trimmed.fq.gz
HTML_OUTPUT=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/fastp/All_fastp_output/html_output/{}pair.html
JSON_OUTPUT=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/fastp/All_fastp_output/json_output/{}pair.json
FAILED_FASTQ_OUTPUT=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/fastp/All_fastp_outputfailed_output/{}failed.fq.gz
UNPAIRED_FORWARD_OUTPUT=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/fastp/All_fastp_output/Unpaired_read1/{}1.unpaired1.fq.gz
UNPAIRED_REVERSE_OUTPUT=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/fastp/All_fastp_output/Unpaired_read2/{}2.unpaired2.fq.gz
MERGED_OUTPUT=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/fastp/All_fastp_output/{}merged.fq.gz
ADAPTER_FASTA_FILE=/scratch/c.c21087028/Polyposis_Exome_Analysis_JOB27/fastp/All_fastp_input/all_fastp_input/adapters_JOB27.fa

if [ "$SLURM_ARRAY_TASK_ID" == "1" ]
then
  mkdir -p $MY_CONTAINER_PATH
  [ -f "$CONTAINER" ] || ssh cl1 wget -O $CONTAINER https://wotan.cardiff.ac.uk/containers/$CONTAINER_FILE
  mkdir $WDPATH
fi

while [ ! -d $WDPATH ]
do
  sleep 10
done

cd /scratch/c.c21087028/

sed -n "${SLURM_ARRAY_TASK_ID}p" $EXOME_IDs_FILE | parallel -j 1 "singularity run $CONTAINER -i $FORWARD_FASTQ -I $REVERSE_FASTQ -o $TRIMMED_FORWARD_OUTPUT -O $TRIMMED_REVERSE_OUTPUT --html $HTML_OUTPUT --json $JSON_OUTPUT --failed_out $FAILED_FASTQ_OUTPUT --unpaired1 $UNPAIRED_FORWARD_OUTPUT --unpaired2 $UNPAIRED_REVERSE_OUTPUT -m --merged_out $MERGED_OUTPUT --adapter_fasta $ADAPTER_FASTA_FILE"
